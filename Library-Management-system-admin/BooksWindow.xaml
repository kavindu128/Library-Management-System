<Window x:Class="Library_Management_system_admin.BooksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library_Management_system_admin"
        mc:Ignorable="d"
        Title="BooksWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="333*"/>
            <RowDefinition Height="48*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>


        <Rectangle Fill="#800080" 
                   Opacity="1.0" 
                   Grid.Column="0" 
                   Grid.RowSpan="3"
                   />

        <Rectangle Fill="#800080" 
                    Opacity="0.7" 
                    Grid.Column="1" 
                    Grid.Row="0"/>

        <Label Content="BOOKS MANAGEMENT" 
               Foreground="Black"
               FontSize="25" 
               VerticalAlignment="Center" 
               FontWeight="Bold" 
               Height="43" 
               HorizontalAlignment="Center" 
               Width="436" 
               Grid.Column="1"/>

        <Rectangle Fill="#800080" 
                   Opacity="0.7" 
                   Grid.Column="1" 
                   Grid.Row="1" Margin="0,333,0,0" Grid.RowSpan="2"/>

        <Button Content="Logout" 
                Margin="26,7,34,6" 
                Background="#4CAF50" 
                Click="LogOutButton_Click" 
                Grid.Row="2"/>
        <Button Content="Back" 
                Margin="10,10,131,10" 
                Background="#4CAF50" 
                Click="BackButton_Click"/>

        <Button Content="Add" 
                    Background="HotPink" 
                    Grid.Row="1"
                    Margin="11,10,10,270"
                    Height="auto"
                    FontSize="25"
                    FontWeight="Bold"
                    Foreground="Black"
                    Grid.Column="0"
                    Click="AddBooks_button"/>


        <Button Content="Update" 
                    Margin="12,68,10,209" 
                    Background="HotPink" 
                    Height="auto" 
                    Grid.Row="1"
                    Width="170"
                    FontSize="25"
                    FontWeight="Bold"
                    Foreground="Black"
                    Grid.Column="0"
                    Click="UpdateBookButton_Click"/>

        <Button Content="Delete" 
                    Margin="12,132,10,146" 
                    Background="HotPink" 
                    Grid.Row="1"
                    Width="170"
                    FontSize="25"
                    FontWeight="Bold"
                    Foreground="Black"
                    Grid.Column="0"
                    Height="auto"
                    
                    Click="DeleteBook_Button"/>

        <DataGrid Background="white"
          x:Name="BooksGrid"
          AutoGenerateColumns="True"
          Grid.Row="1" Grid.Column="1"
          VerticalAlignment="Stretch"
          HorizontalAlignment="Stretch"/>



    </Grid>
</Window>
