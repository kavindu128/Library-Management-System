<Window x:Class="Library_Management_system_admin.Dashboad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library_Management_system_admin"
        mc:Ignorable="d"
        Title="Dashboad" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="333*"/>
            <RowDefinition Height="48*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="127*"/>
            <ColumnDefinition Width="540*"/>

            <ColumnDefinition Width="133*"/>
        </Grid.ColumnDefinitions>

        <Rectangle Fill="#800080" 
                   Opacity="1.0" 
                   Grid.Column="0" 
                   Grid.RowSpan="3"/>

        <Rectangle Fill="#800080" 
           Opacity="0.7" 
           Grid.Column="1" 
           />

        <Label Content="LIBRARY MANAGEMENT SYSTEM" 
               FontSize="25" 
               VerticalAlignment="Center" 
               FontWeight="Bold" 
               Height="43" 
               HorizontalAlignment="Center" 
               Width="436" 
               Grid.Column="1"/>

        <Rectangle Fill="#800080" 
                   Opacity="1.0" 
                   Grid.Column="2" 
                   Grid.RowSpan="3"/>

        <Rectangle Fill="#800080" 
                   Opacity="0.7" 
                   Grid.Column="1" 
                   Grid.Row="3"/>

        <Button Content="Logout" 
                Width="100" 
                Height="35" 
                Margin="10,7,17,6" 
                Background="#4CAF50" 
                Click="LogOutButton_Click" 
                Grid.Row="2"/>

        <Button Content="BOOKS" 
                Margin="129,67,115,209" 
                Background="#800080"
                Foreground="white"
                FontSize="25"
                FontWeight="Heavy"
                Click="BooksButton_Click" 
                Grid.Column="1" 
                Grid.Row="1"
                Height="auto"/>

        <Button Content="MEMBERS" 
                Margin="129,167,115,102" 
                Background="#800080" 
                Foreground="white"
                FontSize="25"
                FontWeight="Heavy"
                Click="MembersButton_Click"
                Grid.Column="1" 
                Grid.Row="1"
                Height="auto"/>


    </Grid>
</Window>
