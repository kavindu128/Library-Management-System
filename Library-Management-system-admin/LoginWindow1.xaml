<Window x:Class="Library_Management_system_admin.LoginWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library_Management_system_admin"
        mc:Ignorable="d"
        Title="LoginWindow1" Height="450" Width="400">
    
    <Grid Background="Purple">
        
        <Image Source="Images/Library_logo.png" Height="110" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,20" Width="324"/>

        
        <TextBlock Text="Login" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,150,0,10" Foreground="White"/>

       
       

        <TextBlock Text="Username:" Margin="10,180,10,0" VerticalAlignment="Top" Foreground="White"/>
        <TextBox x:Name="UsernameTextBox" Margin="10,215,10,0" Height="30" VerticalAlignment="Top" Background="Violet"/>

        <TextBlock Text="Password:" Margin="10,250,10,0" VerticalAlignment="Top" Foreground="White"/>
        <PasswordBox x:Name="PasswordBox" Margin="10,280,10,0" Height="30" VerticalAlignment="Top" Background="Violet"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50">
            <Button Content="Login" Width="100" Height="35" Margin="10,0" Background="#4CAF50" Click="LoginButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
